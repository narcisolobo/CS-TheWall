@using TheWall.Models;
@model User;

<div class="card card-hover">
  <form asp-action="Register" asp-controller="Home" method="POST">
    <div class="card-body">
      <h1 class="card-title h4">Register</h1>
      <div class="form-group">
        <input asp-for="FirstName" class="form-control" type="text" placeholder="First Name">
        <span style="color:red;font-size:small;" asp-validation-for="FirstName"></span>
      </div>
      <div class="form-group">
        <input asp-for="LastName" class="form-control" type="text" placeholder="Last Name">
        <span style="color:red;font-size:small;" asp-validation-for="LastName"></span>
      </div>
      <div class="form-group">
        <input asp-for="Email" class="form-control" type="text" placeholder="Email Address">
        <span style="color:red;font-size:small;" asp-validation-for="Email"></span>
      </div>
      <div class="form-group">
        <input asp-for="Password" class="form-control" type="text" placeholder="Password" type="password">
        <span style="color:red;font-size:small;" asp-validation-for="Password"></span>
      </div>
      <div class="form-group">
        <input asp-for="ConfirmPassword" class="form-control" type="text" placeholder="Confirm Password" type="password">
        <span style="color:red;font-size:small;" asp-validation-for="ConfirmPassword"></span>
      </div>
      <button type="submit" class="btn btn-dark btn-block">REGISTER</button>
    </div>
  </form>
</div>