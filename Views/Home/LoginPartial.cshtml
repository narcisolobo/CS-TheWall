@using TheWall.Models;
@model LoginUser;

<div class="card card-hover">
  <form asp-action="Login" asp-controller="Home" method="POST">
    <div class="card-body">
      <h1 class="card-title h4">Login</h1>
      <div class="form-group">
        <input asp-for="LoginEmail" class="form-control" type="text" placeholder="Email Address">
        <span style="color:red;font-size:small;" asp-validation-for="LoginEmail"></span>
      </div>
      <div class="form-group">
        <input asp-for="LoginPassword" class="form-control" type="text" placeholder="Password" type="password">
        <span style="color:red;font-size:small;" asp-validation-for="LoginPassword"></span>
      </div>
      <button type="submit" class="btn btn-dark btn-block">LOGIN</button>
    </div>
  </form>
</div>